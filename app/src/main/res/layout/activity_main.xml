                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="What is the Capital of Nigeria?"
                android:textSize="22sp" />
        </LinearLayout>

        <RadioGroup
